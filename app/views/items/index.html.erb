<div class="main">
  <%# TOPイメージ部分 %>
  <div class="main-container">
      <div class="service-concept">
        <%= image_tag "cosmit-top.png", class:"top-img" %>
      </div>
    <%# /TOPイメージ部分 %>
    <%# コスメ一覧 %>
    <div class="item-contents">
      <h4 class="title">Cosmetic list</h4>
      <div class="item-category">
        <%#カテゴリー Face%>
        <h4 class="items-category_name">Face
        </h4>
        <ul class="item-lists">
          <% if @post_face[0]!= nil %>
            <% @post_face.each do |item| %>
              <li class='list'>
              <%#= link_to item_path(item.id) do %>
                <div class='item-img-content'>
                  <%= image_tag item.image, class: "item-img" if item.image.attached? %>
                </div>
                <div class="item-info">
                  <div class="item-brand">
                    <%= item.brand %>
                  </div>
                  <div class="item-name">
                    <%= item.title %>
                  </div>
                  <div class="item-category_option">
                    <%= item.category_option.name %>
                  </div>
                  <div class="user-name">
                    <%= link_to item.user.nickname %>
                  </div>
                </div>
              </li>
            <% end %>
          <%else%>
            <%= render 'no_registration' %>
          <%end%>
        </ul>
        <%# /カテゴリー Face %>

        <%#カテゴリー Eye %>
        <div class="items-category_name">Eye
        </div>
        <ul class="item-lists">
        <% if @post_eye[0]!= nil %>
            <% @post_eye.each do |item| %>
              <li class='list'>
              <%#= link_to item_path(item.id) do %>
                <div class='item-img-content'>
                  <%= image_tag item.image, class: "item-img" if item.image.attached? %>
                </div>
                <div class="item-info">
                  <div class="item-brand">
                    <%= item.brand %>
                  </div>
                  <div class="item-name">
                    <%= item.title %>
                  </div>
                  <div class="item-category_option">
                    <%= item.category_option.name %>
                  </div>
                  <div class="user-name">
                    <%= link_to item.user.nickname %>
                  </div>
                </div>
              </li>
            <% end %>
          <%else%>
            <%= render 'no_registration' %>
          <%end%>
        </ul>
        <%# /カテゴリー Eye %>

        <%#カテゴリー Lip %>
        <div class="items-category_name">Lip
        </div>
        <ul class="item-lists">
          <% if @post_lip[0]!= nil %>
            <% @post_lip.each do |item| %>
              <li class='list'>
              <%#= link_to item_path(item.id) do %>
                <div class='item-img-content'>
                  <%= image_tag item.image, class: "item-img" if item.image.attached? %>
                </div>
                <div class="item-info">
                  <div class="item-brand">
                    <%= item.brand %>
                  </div>
                  <div class="item-name">
                    <%= item.title %>
                  </div>
                  <div class="item-category_option">
                    <%= item.category_option.name %>
                  </div>
                  <div class="user-name">
                    <%= link_to item.user.nickname %>
                  </div>
                </div>
              </li>
            <% end %>
          <%else%>
            <%= render 'no_registration' %>
          <%end%>
        </ul>
        <%# /カテゴリー Lip %>
      </div>
    </div>
  </div>
</div>